{
    "manifest_version": 2.0,
    "id": "hostmetrics",
    "name": "Host Metrics Enhancer",
    "version": "1.0.0",
    "namespace": "HostMetrics",
    "author": "Monzphere",
    "description": "Adds CPU, Memory, and Disk metrics to the native host views",
    "actions": {
        "hostmetrics.data": {
            "class": "CControllerHostMetricsData",
            "layout": null
        }
    },
    "assets": {
        "css": ["host-metrics.css"],
        "js": ["host-metrics.js"]
    }
}
